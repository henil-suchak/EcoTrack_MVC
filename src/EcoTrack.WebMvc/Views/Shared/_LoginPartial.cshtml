@using System.Security.Claims

<ul class="navbar-nav">
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <span class="navbar-text me-3">Hello, @User.FindFirstValue(ClaimTypes.Name)!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Users" asp-action="Logout" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Users" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Login</a>
    </li>
}
</ul>