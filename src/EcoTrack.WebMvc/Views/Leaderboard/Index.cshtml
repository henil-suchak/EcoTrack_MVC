@using EcoTrack.WebMvc.ViewModels
@model LeaderboardPageViewModel

@{
    ViewData["Title"] = $"{Model.ActivePeriod} Leaderboard";
    var currentUserId = ViewBag.CurrentUserId != null ? Guid.Parse(ViewBag.CurrentUserId) : Guid.Empty;
    var maxEmission = Model.Entries.Any() ? Model.Entries.Max(e => e.CarbonEmission) : 1;
    if (maxEmission == 0) maxEmission = 1;
}

<div class="text-center">
    <h1 class="display-4">üèÜ Weekly Leaderboard</h1>
    <p class="lead">See who's making the biggest impact this week!</p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Rank</th>
                                <th scope="col">User</th>
                                <th scope="col">Total CO‚ÇÇ Emission</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                // Highlight the current user's row
                                var rowClass = entry.UserId == currentUserId ? "table-primary" : "";
                                <tr class="@rowClass">
                                    <th scope="row">@entry.Rank</th>
                                    <td>@entry.UserName</td>
                                    <td>@entry.CarbonEmission.ToString("F2") kg</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">The leaderboard is still being calculated. Check back soon!</p>
                }
            </div>
        </div>
    </div>
</div>


<style>
    body {
    background-color: #f5f5f5;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.leaderboard-container {
    max-width: 1500px;
    margin: 1rem auto;
    padding: 0 1rem;
}

.leaderboard-card {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    overflow: hidden;
}

.leaderboard-header {
    background-color: #fff;
    color: #333;
    text-align: center;
    padding: 1.5rem;
    border-bottom: 1px solid #e0e0e0;
}

.leaderboard-header h2 {
    margin: 0;
    font-weight: 600;
    font-size: 1.8rem;
}

.leaderboard-header p {
    margin: 0.5rem 0 0 0;
    font-size: 1rem;
    color: #666;
}

.leaderboard-toggle {
    display: flex;
    justify-content: center;
    padding: 1rem;
    gap: 1rem;
}

.toggle-btn {
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    color: #333;
    font-weight: 500;
    border: 1px solid #ccc;
    transition: all 0.3s;
}

.toggle-btn.active {
    background-color: #2a9d8f;
    color: #fff;
    border-color: #2a9d8f;
}

.leaderboard-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

.leaderboard-list-header,
.leaderboard-list-item {
    display: flex;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #e0e0e0;
}

.leaderboard-list-header {
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    font-size: 0.85rem;
}

.leaderboard-list-item:last-child {
    border-bottom: none;
}

.rank { flex: 0 0 10%; font-weight: 600; color: #333; }
.user { flex: 1; display: flex; align-items: center; color: #333; }
.score { flex: 0 0 25%; text-align: right; font-weight: 600; color: #2a9d8f; }

.avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: #2a9d8f;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.8rem;
    font-weight: 600;
}

.progress {
    height: 6px;
    background-color: #e0e0e0;
    border-radius: 5px;
    margin-top: 0.3rem;
}

.progress-bar {
    height: 100%;
    background-color: #2a9d8f;
    border-radius: 5px;
}

.leaderboard-list-item.current-user {
    background-color: #f0fdfd;
    border-left: 4px solid #2a9d8f;
    font-weight: 600;
}

</style>